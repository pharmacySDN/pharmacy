<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Stock Report</title>
</head>
<body>
    <h1>Stock Report</h1>
    <table>
        <thead>
            <tr>
                <th>Product Name</th>
                <th>SKU</th>
                <th>Current Stock</th>
                <th>Price</th>
            </tr>
        </thead>
        <tbody>
            <% products.forEach(product => { %>
                <tr>
                    <td><%= product.name %></td>
                    <td><%= product.sku %></td>
                    <td><%= product.stock %></td>
                    <td><%= product.price %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
    <a href="/api/inventory">Back to Inventory</a>
</body>
</html>
