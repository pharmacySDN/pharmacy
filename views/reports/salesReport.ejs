<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sales Report</title>
</head>
<body>
    <h1>Sales Report</h1>
    <p>From: <%= startDate %> To: <%= endDate %></p>
    <p>Total Sales: <%= totalSales %></p>
    <p>Total Items Sold: <%= itemsSold %></p>
    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Customer</th>
                <th>Items</th>
                <th>Total</th>
            </tr>
        </thead>
        <tbody>
            <% if (sales && sales.length > 0) { %>
                <% sales.forEach(sale => { %>
                    <tr>
                        <td><%= sale.date.toLocaleDateString() %></td>
                        <td><%= sale.customer.profile.name %></td>
                        <td>
                            <ul>
                                <% sale.items.forEach(item => { %>
                                    <li><%= item.product.name %> - <%= item.quantity %> x <%= item.price %></li>
                                <% }); %>
                            </ul>
                        </td>
                        <td><%= sale.total %></td>
                    </tr>
                <% }); %>
            <% } else { %>
                <tr>
                    <td colspan="4">No sales recorded within the selected period</td>
                </tr>
            <% } %>
        </tbody>
    </table>
    <a href="/api/reports/dashboard">Back to Dashboard</a>
</body>
</html>
