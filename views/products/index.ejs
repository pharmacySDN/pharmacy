<!DOCTYPE html>
<html lang="en">
    <%- include('../common/header'); %>
<head>
   

    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
        }

        /* Container */
        .container {
            max-width: 800px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333;
            text-align: center;
            margin-bottom: 20px;
        }

        /* Add Product Button */
        .btn-primary {
            background-color: #007bff;
            color: white;
            padding: 8px 16px;
            text-decoration: none;
            border-radius: 4px;
            transition: background-color 0.3s;
        }

        .btn-primary:hover {
            background-color: #0056b3;
        }

        /* Search Form */
        .form-inline .form-control {
            width: 70%;
            border-radius: 4px;
        }

        .form-inline .btn-secondary {
            background-color: #6c757d;
            color: white;
            padding: 8px 16px;
            border-radius: 4px;
        }

        .form-inline .btn-secondary:hover {
            background-color: #5a6268;
        }

        /* Table Styling */
        .table {
            width: 100%;
            margin-top: 10px;
            border-collapse: collapse;
        }

        .table-bordered {
            border: 1px solid #ddd;
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: #f9f9f9;
        }

        .thead-dark th {
            background-color: #343a40;
            color: white;
        }

        th,
        td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        /* Action Buttons */
        .d-flex .btn-link {
            color: #17a2b8;
            text-decoration: none;
            padding: 6px 12px;
            font-size: 14px;
        }

        .d-flex .btn-warning {
            background-color: #ffc107;
            color: white;
            padding: 6px 12px;
            font-size: 14px;
        }

        .d-flex .btn-danger {
            background-color: #dc3545;
            color: white;
            padding: 6px 12px;
            font-size: 14px;
        }

        .btn-link:hover,
        .btn-warning:hover,
        .btn-danger:hover {
            opacity: 0.8;
        }

        /* No Products Message */
        .text-muted {
            color: #6c757d;
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>

<body >
    
    <div class="wrapper">
        <!-- Navbar-->
        <%- include('../common/nav'); %>
        <!-- Side-Nav-->
        <%- include('../common/side_nav'); %>

        <div class="content-wrapper ">
            <!-- Header and Add Product Link -->
            <div class="container-fluid">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1>Product List</h1>
                    <a href="/api/products/add" class="btn btn-primary">+ Add New Product</a>
                </div>
    
                <!-- Search Form -->
                <div class="mb-3">
                    <form action="/api/products/search" method="GET" class="form-inline">
                        <input type="text" name="name" class="form-control mr-2" placeholder="Search by name">
                        <button type="submit" class="btn btn-secondary">Search</button>
                    </form>
                </div>
    
                <!-- Product Table -->
                <% if (products.length> 0) { %>
                    <table class="table table-striped table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th>Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% products.forEach(product=> { %>
                                <tr>
                                    <td>
                                        <%= product.name %>
                                    </td>
                                    <td>
                                        <%= product.category %>
                                    </td>
                                    <td>$<%= product.price.toFixed(2) %>
                                    </td>
                                    <td>
                                        <%= product.stock %>
                                    </td>
                                    <td>
                                        <div class="d-flex">
                                            <a href="/api/products/detail/<%= product._id %>"
                                                class="btn btn-link">Detail</a>
                                            <a href="/api/products/edit/<%= product._id %>"
                                                class="btn btn-warning mx-2">Edit</a>
                                            <form action="/api/products/delete/<%= product._id %>" method="POST"
                                                style="display:inline;">
                                                <button type="submit" class="btn btn-danger">Delete</button>
                                            </form>
                                        </div>
                                    </td>
                                </tr>
                                <% }); %>
                        </tbody>
                    </table>
                    <% } else { %>
                        <p class="text-center text-muted">No products found.</p>
                        <% } %>
            </div>
        </div>

    </div>
    

    

    <%- include('../common/script'); %>
</body>

</html>