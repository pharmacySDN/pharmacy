<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User List</title>
</head>
<body>
    <h1>User List</h1>
    <a href="/api/users/add">Add New User</a>
    <form action="/api/users/search" method="GET">
        <input type="text" name="search" placeholder="Search users">
        <button type="submit">Search</button>
    </form>
    <table>
        <thead>
            <tr>
                <th>Username</th>
                <th>Name</th>
                <th>Email</th>
                <th>Role</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            <% users.forEach(user => { %>
                <tr>
                    <td><%= user.username %></td>
                    <td><%= user.profile.name %></td>
                    <td><%= user.profile.email %></td>
                    <td><%= user.role.join(', ') %></td>
                    <td>
                        <a href="/api/users/edit/<%= user._id %>">Edit</a>
                        <form action="/users/delete/<%= user._id %>" method="POST" style="display:inline;">
                            <button type="submit">Delete</button>
                        </form>
                        <a href="/api/users/changePassword/<%= user._id %>">Change Password</a>
                    </td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</body>
</html>
