<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User</title>
</head>
<body>
    <h1>Edit User</h1>
    <% if (locals.error) { %>
        <p style="color: red;"><%= error %></p>
    <% } %>
    <form action="/users/edit/<%= user._id %>" method="POST">
        <input type="text" name="username" value="<%= user.username %>" required>
        <select name="role" multiple required>
            <option value="admin" <%= user.role.includes('admin') ? 'selected' : '' %>>Admin</option>
            <option value="manager" <%= user.role.includes('manager') ? 'selected' : '' %>>Manager</option>
            <option value="employee" <%= user.role.includes('employee') ? 'selected' : '' %>>Employee</option>
            <option value="customer" <%= user.role.includes('customer') ? 'selected' : '' %>>Customer</option>
            <option value="supplier" <%= user.role.includes('supplier') ? 'selected' : '' %>>Supplier</option>
        </select>
        <input type="text" name="profile[name]" value="<%= user.profile.name %>" required>
        <input type="email" name="profile[email]" value="<%= user.profile.email %>" required>
        <input type="text" name="profile[address]" value="<%= user.profile.address %>" required>
        <input type="tel" name="profile[contact]" value="<%= user.profile.contact %>" required>
        <button type="submit">Update User</button>
    </form>
    <a href="/users">Back to User List</a>
</body>
</html>
